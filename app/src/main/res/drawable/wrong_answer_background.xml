<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
            <shape>
                <corners android:radius="20dp" />
                <solid android:color="#f42125" />
            </shape>
        </item>
        <item android:bottom="2dp" android:left="0dp" android:right="2dp" android:top="0dp">
            <shape>
                <gradient android:angle="270" android:startColor="#d11a1d" android:endColor="#f42125" />
                <corners android:radius="20dp" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>